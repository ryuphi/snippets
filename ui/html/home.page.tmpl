{{ template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>latest snippets</h2>

    {{if .Snippets}}
        <table>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>Id</th>
            </tr>
            {{range .Snippets}}
            <tr>
                <td><a href='/snippet?id={{.Id}}'>{{.Title}}</a></td>
                <td>{{.Created}}</td>
                <td>#{{.Id}}</td>
            </tr>
            {{end}}
        </table>
    {{else}}
        <p>there's nothing to see here yet!</p>
    {{end}}
{{end}}
